#include <iostream>
using namespace std;
int factorial (int n)
{
	if (n==0) {
	return 1;
	} else {
	int recurse = factorial (n-1);
	int result = n * recurse;
	return result;
	}
}
int loop (string yes/no)
{
if (string == yes) {

int main ()
{
int n;
cout<<"We're gonna have fun with factorials now!"<<endl;
cout<<"Give me a positive integer"<<endl;
cin>>n;
cout<<"This is the factorial: "<<factorial (n)<<endl;

}
