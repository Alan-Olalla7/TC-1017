#include <iostream>
using namespace std;
int main()
{
 int a, b;
 int add=0;
 int i=a;
 cout << "Proceed to type two numbers. We will calculate the integer addition of the range [n1, n2]"<< endl;
 cout << "Let your n2 be greater than your n1" << endl;
 cout << "First number: "; cin>>a;
 cout << "Second number: "; cin>>b;
 while (i<=b) {
 add=add+i;
 i++;
 }
  cout << "The sum of the range you ask is: "<<add<<endl;
}
