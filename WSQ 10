#include <iostream>
#include <vector>
#include <numeric>
#include <cmath>
using namespace std;
int main()
{
  vector <int> num;
  int x, i, l;
  cout<<"Write some numbers. We will take them and get their average and their standard deviation. Also, input '00' when you are done writing numbers."<<endl;
  cin>>x;
  while (x!=00) {
    num.push_back(x);
    cin>>x;
   }
  l=num.size();
  for(i=0; i<l; i++) {
    cout<<num[i]<<", ";
    }
  cout<<endl;
  cout<<"The total is: ";
  float add=accumulate(num.begin(),num.end(),0.0);
  cout<<add<<endl;
  cout<<"The average is: ";
  float average=(add/l);
  cout<<average<<endl;
  float stdv=0;
  for(i=0; i<l; i++) {
    stdv=stdv+(average-num[i])*(average-num[i]);
    }
  stdv=stdv/l;
  stdv=sqrt(stdv);
  cout<<"The standard deviation is "; stdv<<endl;
  return 0;
}
